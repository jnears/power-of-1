<%= form_for(@coach) do |f| %>
<ul>
      <% @coach.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
  <fieldset>
    <legend>Runner Details</legend>
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :group_level %>
      <!-- select list pulls in the values from the method in the coach controller-->
      <%= f.select(:group_level, Coach::GROUP_LEVELS) %>
    </div>
    <%= @coach.id %>
  </fieldset>

  <div class="actions">
    
    <%= f.submit "Submit"%>
  
  </div>

<% end %>